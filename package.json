{
  "name": "react-signature-pad",
  "version": "2.0.0",
  "description": "A highly customizable signature component for React and Next.js applications with enhanced UX and developer experience",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./components": {
      "import": "./dist/esm/components/index.js",
      "require": "./dist/components/index.js",
      "types": "./dist/types/components/index.d.ts"
    },
    "./ui": {
      "import": "./dist/esm/ui/index.js",
      "require": "./dist/ui/index.js",
      "types": "./dist/types/ui/index.d.ts"
    },
    "./hooks": {
      "import": "./dist/esm/hooks/index.js",
      "require": "./dist/hooks/index.js",
      "types": "./dist/types/hooks/index.d.ts"
    },
    "./styles/*": "./dist/styles/*",
    "./dist/*": "./dist/*"
  },
  "scripts": {
    "build": "npm run build:css && rollup -c",
    "build:css": "tailwindcss -i ./src/styles/tailwind.css -o ./dist/styles/tailwind.css --minify",
    "build:watch": "npm run build:css && rollup -c -w",
    "dev": "rollup -c -w",
    "prepare": "npm run build",
    "test": "jest",
    "example:react": "cd examples/react-example && npm start",
    "example:next": "cd examples/nextjs-example && npm run dev",
    "docs": "typedoc src/index.ts --out docs",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,css,md}"
  },
  "keywords": [
    "react",
    "nextjs",
    "signature",
    "signature-pad",
    "canvas",
    "drawing",
    "typescript",
    "ui-components",
    "accessibility",
    "mobile-friendly",
    "customizable",
    "hooks"
  ],
  "author": "MwendaB <brianmwenda255@gmail.com> (https://github.com/MwendaB)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MwendaB/react-signature-pad"
  },
  "bugs": {
    "url": "https://github.com/MwendaB/react-signature-pad/issues"
  },
  "homepage": "https://github.com/MwendaB/react-signature-pad#readme",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^10.0.0",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.0.0",
    "rollup-plugin-dts": "^5.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "tailwindcss": "^3.4.10",
    "tslib": "^2.4.0",
    "typescript": "^4.9.0"
  },
  "files": [
    "dist",
    "README.md",
    "README_ENHANCED.md",
    "API_DOCUMENTATION.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "dependencies": {
    "@types/uuid": "^11.0.0",
    "uuid": "^13.0.0"
  }
}
